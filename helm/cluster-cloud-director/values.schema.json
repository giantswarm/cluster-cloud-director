{
    "$schema": "http://json-schema.org/schema#",
    "$defs": {
        "catalog": {
            "type": "string",
            "title": "Catalog",
            "description": "VCD catalog in which the template is stored.",
            "examples": [
                "giantswarm"
            ]
        },
        "nodeLabels": {
            "type": "array",
            "items": {
                "type": "string",
                "title": "Custom node label",
                "pattern": "^[A-Za-z0-9-_\\./]{1,63}=[A-Za-z0-9-_\\.]{0,63}$",
                "examples": [
                    "key=value"
                ]
            }
        },
        "nodeTaints": {
            "type": "array",
            "items": {
                "type": "object",
                "title": "Custom node taint",
                "properties": {
                    "key": {
                        "type": "string",
                        "minLength": 1,
                        "description": "Name of the label on a node"
                    },
                    "value": {
                        "type": "string",
                        "description": "value of the label identified by the key"
                    },
                    "effect": {
                        "type": "string",
                        "description": "One of NoSchedule, PreferNoSchedule or NoExecute",
                        "enum": ["NoSchedule", "PreferNoSchedule", "NoExecute"]
                    }
                },
                "required": [
                    "key",
                    "effect"
                ]
            }
        },
        "placementPolicy": {
            "type": "string",
            "title": "Placement policy"
        },
        "sizingPolicy": {
            "type": "string",
            "title": "Sizing policy",
            "examples": [
                "m1.medium"
            ]
        },
        "storageProfile": {
            "type": "string",
            "title": "Storage profile"
        },
        "template": {
            "type": "string",
            "title": "Template",
            "description": "Template used to create the node VM.",
            "examples": [
                "ubuntu-2004-kube-v1.22.5"
            ]
        },
        "diskSizeGB": {
            "type": "integer",
            "title": "Node disk size in GB",
            "description": "Change size of the nodes OS disk.",
            "examples": [
                30
            ]
        }
    },
    "type": "object",
    "properties": {
        "apiServer": {
            "type": "object",
            "properties": {
                "enableAdmissionPlugins": {
                    "type": "string"
                },
                "featureGates": {
                    "type": "string"
                }
            },
            "required": [
                "enableAdmissionPlugins",
                "featureGates"
            ]
        },
        "connectivity": {
            "type": "object",
            "title": "Connectivity",
            "description": "Configurations related to cluster connectivity such as container registries.",
            "properties": {
                "containerRegistries": {
                    "type": "object",
                    "title": "Container registries",
                    "description": "Endpoints and credentials configuration for container registries.",
                    "additionalProperties": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "endpoint": {
                                    "type": "string",
                                    "title": "Endpoint",
                                    "description": "Endpoint for the container registry."
                                },
                                "credentials": {
                                    "type": "object",
                                    "title": "Credentials",
                                    "description": "Credentials for the endpoint.",
                                    "properties": {
                                        "username": {
                                            "type": "string",
                                            "title": "Username",
                                            "description": "Username is the username to login the registry."
                                        },
                                        "password": {
                                            "type": "string",
                                            "title": "Password",
                                            "description": "Password is the password to login the registry."
                                        },
                                        "auth": {
                                            "type": "string",
                                            "title": "Auth",
                                            "description": " Auth is a base64 encoded string from the concatenation of the username, a colon, and the password."
                                        },
                                        "identitytoken": {
                                            "type": "string",
                                            "title": "Identity Token",
                                            "description": "Identity Token is used to authenticate the user and get an access token for the registry."
                                        }
                                    }
                                }
                            },
                            "required": [
                                "endpoint"
                            ]
                        }
                    },
                    "examples": [
                        {
                            "docker.io": [
                                { 
                                    "endpoint": "registry-1.docker.io",
                                    "credentials":{
                                        "username": "my_user_name",
                                        "password": "my_password"
                                    }
                                },
                                { "endpoint": "my-mirror-registry.mydomain.io"}
                            ]
                        }
                    ]
                }
            },
            "required": [
                "containerRegistries"
            ]
        },
        "controllerManager": {
            "type": "object",
            "properties": {
                "featureGates": {
                    "type": "string"
                }
            },
            "required": [
                "featureGates"
            ]
        },
        "baseDomain": {
            "type": "string"
        },
        "cloudDirector": {
            "type": "object",
            "properties": {
                "org": {
                    "type": "string"
                },
                "ovdc": {
                    "type": "string"
                },
                "ovdcNetwork": {
                    "type": "string"
                },
                "site": {
                    "type": "string"
                }
            },
            "required": [
                "org",
                "ovdc",
                "ovdcNetwork",
                "site"
            ]
        },
        "cluster": {
            "type": "object",
            "properties": {
                "parentUid": {
                    "type": "string"
                },
                "rdeId": {
                    "type": "string"
                },
                "useAsManagementCluster": {
                    "type": "boolean"
                }
            }
        },
        "clusterDescription": {
            "type": "string"
        },
        "controlPlane": {
            "type": "object",
            "required": [
                "catalog",
                "template",
                "replicas",
                "dns",
                "etcd",
                "resourceRatio"
            ],
            "properties": {
                "catalog": {
                    "$ref": "#/$defs/catalog"
                },
                "customNodeLabels": {
                    "$ref": "#/$defs/nodeLabels"
                },
                "dns": {
                    "type": "object",
                    "properties": {
                        "imageRepository": {
                            "type": "string"
                        },
                        "imageTag": {
                            "type": "string"
                        }
                    }
                },
                "etcd": {
                    "type": "object",
                    "properties": {
                        "imageRepository": {
                            "type": "string"
                        },
                        "imageTag": {
                            "type": "string"
                        }
                    }
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "repository": {
                            "type": "string"
                        }
                    }
                },
                "placementPolicy": {
                    "$ref": "#/$defs/placementPolicy"
                },
                "replicas": {
                    "type": "integer"
                },
                "sizingPolicy": {
                    "$ref": "#/$defs/sizingPolicy"
                },
                "storageProfile": {
                    "$ref": "#/$defs/storageProfile"
                },
                "template": {
                    "$ref": "#/$defs/template"
                },
                "diskSizeGB": {
                    "$ref": "#/$defs/diskSizeGB"
                },
                "resourceRatio": {
                    "minimum": 2,
                    "type": "integer"
                }
            }
        },
        "includeClusterResourceSet": {
            "type": "string"
        },
        "kubectlImage": {
            "type": "object",
            "title": "Kubectl image",
            "description": "Used by cluster-shared library chart to configure coredns in-cluster.",
            "properties": {
                "name": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "kubernetesVersion": {
            "type": "string"
        },
        "clusterLabels": {
            "type": "object",
            "description": "Used for adding configurable labels to the cluster CR."
        },
        "network": {
            "type": "object",
            "properties": {
                "controlPlaneEndpoint": {
                    "type": "object",
                    "properties": {
                        "host": {
                            "type": "string"
                        },
                        "port": {
                            "type": "string"
                        }
                    }
                },
                "loadBalancer": {
                    "type": "object",
                    "properties": {
                        "vipSubnet": {
                            "type": "string"
                        }
                    }
                },
                "podsCidrBlocks": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "servicesCidrBlocks": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "staticRoutes": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "destination": {
                                "type": "string",
                                "examples": [
                                    "10.128.0.0/16"
                                ]
                            },
                            "via": {
                                "type": "string",
                                "format": "ipv4"
                            }
                        },
                        "required": [
                            "destination",
                            "via"
                        ]
                    }
                },
                "extraOvdcNetworks": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "loadBalancer",
                "podsCidrBlocks",
                "servicesCidrBlocks"
            ]
        },
        "proxy": {
            "type": "object",
            "properties": {
                "secretName": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "nodeClasses": {
            "type": "object",
            "title": "Node classes",
            "description": "Re-usable node configuration.",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "catalog": {
                        "$ref": "#/$defs/catalog"
                    },
                    "customNodeLabels": {
                        "$ref": "#/$defs/nodeLabels"
                    },
                    "customNodeTaints": {
                        "$ref": "#/$defs/nodeTaints"
                    },
                    "template": {
                        "$ref": "#/$defs/template"
                    },
                    "sizingPolicy": {
                        "$ref": "#/$defs/sizingPolicy"
                    },
                    "placementPolicy": {
                        "$ref": "#/$defs/placementPolicy"
                    },
                    "storageProfile": {
                        "$ref": "#/$defs/storageProfile"
                    },
                    "diskSizeGB": {
                        "$ref": "#/$defs/diskSizeGB"
                    }
                }
            }
        },
        "nodePools": {
            "type": "object",
            "title": "Node pools",
            "description": "Groups of worker nodes with identical configuration.",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "class": {
                        "type": "string",
                        "title": "Node class"
                    },
                    "replicas": {
                        "type": "integer",
                        "minimum": 1
                    }
                }
            }
        },
        "oidc": {
            "type": "object",
            "properties": {
                "caFile": {
                    "type": "string"
                },
                "clientId": {
                    "type": "string"
                },
                "groupsClaim": {
                    "type": "string"
                },
                "issuerUrl": {
                    "type": "string"
                },
                "usernameClaim": {
                    "type": "string"
                },
                "usernamePrefix": {
                    "type": "string"
                }
            },
            "required": [
                "clientId",
                "groupsClaim",
                "issuerUrl",
                "usernameClaim"
            ]
        },
        "organization": {
            "type": "string"
        },
        "ssh": {
            "type": "object",
            "properties": {
                "users": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "authorizedKeys": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "servicePriority": {
            "type": "string",
            "enum": [
                "lowest",
                "medium",
                "highest"
            ]
        },
        "userContext": {
            "type": "object",
            "properties": {
                "secretRef": {
                    "type": "object",
                    "properties": {
                        "secretName": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "required": [
        "apiServer",
        "baseDomain",
        "controllerManager",
        "cloudDirector",
        "controlPlane",
        "network",
        "nodeClasses",
        "nodePools",
        "organization",
        "userContext"
    ]
}
