{
    "$defs": {
        "catalog": {
            "description": "VCD catalog in which the template is stored.",
            "examples": [
                "giantswarm"
            ],
            "title": "Catalog",
            "type": "string"
        },
        "diskSizeGB": {
            "description": "Change size of the nodes OS disk.",
            "examples": [
                30
            ],
            "title": "Node disk size in GB",
            "type": "integer"
        },
        "nodeLabels": {
            "items": {
                "examples": [
                    "key=value"
                ],
                "pattern": "^[A-Za-z0-9-_\\./]{1,63}=[A-Za-z0-9-_\\.]{0,63}$",
                "title": "Custom node label",
                "type": "string"
            },
            "type": "array"
        },
        "nodeTaints": {
            "items": {
                "properties": {
                    "effect": {
                        "description": "One of NoSchedule, PreferNoSchedule or NoExecute",
                        "enum": [
                            "NoSchedule",
                            "PreferNoSchedule",
                            "NoExecute"
                        ],
                        "type": "string"
                    },
                    "key": {
                        "description": "Name of the label on a node",
                        "minLength": 1,
                        "type": "string"
                    },
                    "value": {
                        "description": "value of the label identified by the key",
                        "type": "string"
                    }
                },
                "required": [
                    "key",
                    "effect"
                ],
                "title": "Custom node taint",
                "type": "object"
            },
            "type": "array"
        },
        "placementPolicy": {
            "title": "Placement policy",
            "type": "string"
        },
        "sizingPolicy": {
            "examples": [
                "m1.medium"
            ],
            "title": "Sizing policy",
            "type": "string"
        },
        "storageProfile": {
            "title": "Storage profile",
            "type": "string"
        },
        "template": {
            "description": "Template used to create the node VM.",
            "examples": [
                "ubuntu-2004-kube-v1.22.5"
            ],
            "title": "Template",
            "type": "string"
        }
    },
    "$schema": "http://json-schema.org/schema#",
    "properties": {
        "apiServer": {
            "properties": {
                "certSANs": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "enableAdmissionPlugins": {
                    "type": "string"
                },
                "featureGates": {
                    "type": "string"
                }
            },
            "required": [
                "enableAdmissionPlugins",
                "featureGates"
            ],
            "type": "object"
        },
        "baseDomain": {
            "type": "string"
        },
        "cloudDirector": {
            "properties": {
                "org": {
                    "type": "string"
                },
                "ovdc": {
                    "type": "string"
                },
                "ovdcNetwork": {
                    "type": "string"
                },
                "site": {
                    "type": "string"
                }
            },
            "required": [
                "org",
                "ovdc",
                "ovdcNetwork",
                "site"
            ],
            "type": "object"
        },
        "cloudProvider": {
            "properties": {
                "enableVirtualServiceSharedIP": {
                    "type": "boolean"
                },
                "oneArm": {
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        }
                    }
                }
            },
            "required": [
                "enableVirtualServiceSharedIP",
                "oneArm"
            ],
            "type": "object"
        },
        "cluster": {
            "properties": {
                "parentUid": {
                    "type": "string"
                },
                "rdeId": {
                    "type": "string"
                },
                "useAsManagementCluster": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "clusterDescription": {
            "type": "string"
        },
        "clusterLabels": {
            "description": "Used for adding configurable labels to the cluster CR.",
            "type": "object"
        },
        "connectivity": {
            "description": "Configurations related to cluster connectivity such as container registries.",
            "properties": {
                "containerRegistries": {
                    "additionalProperties": {
                        "items": {
                            "properties": {
                                "credentials": {
                                    "description": "Credentials for the endpoint.",
                                    "properties": {
                                        "auth": {
                                            "description": "Base64-encoded string from the concatenation of the username, a colon, and the password.",
                                            "title": "Auth",
                                            "type": "string"
                                        },
                                        "identitytoken": {
                                            "description": "Used to authenticate the user and obtain an access token for the registry.",
                                            "title": "Identity token",
                                            "type": "string"
                                        },
                                        "password": {
                                            "description": "Used to authenticate for the registry with username/password.",
                                            "title": "Password",
                                            "type": "string"
                                        },
                                        "username": {
                                            "description": "Used to authenticate for the registry with username/password.",
                                            "title": "Username",
                                            "type": "string"
                                        }
                                    },
                                    "title": "Credentials",
                                    "type": "object"
                                },
                                "endpoint": {
                                    "description": "Endpoint for the container registry.",
                                    "title": "Endpoint",
                                    "type": "string"
                                }
                            },
                            "required": [
                                "endpoint"
                            ],
                            "type": "object"
                        },
                        "type": "array"
                    },
                    "description": "Endpoints and credentials configuration for container registries.",
                    "title": "Container registries",
                    "type": "object"
                }
            },
            "required": [
                "containerRegistries"
            ],
            "title": "Connectivity",
            "type": "object"
        },
        "controlPlane": {
            "properties": {
                "catalog": {
                    "$ref": "#/$defs/catalog"
                },
                "customNodeLabels": {
                    "$ref": "#/$defs/nodeLabels"
                },
                "diskSizeGB": {
                    "$ref": "#/$defs/diskSizeGB"
                },
                "dns": {
                    "properties": {
                        "imageRepository": {
                            "type": "string"
                        },
                        "imageTag": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "etcd": {
                    "properties": {
                        "imageRepository": {
                            "type": "string"
                        },
                        "imageTag": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "image": {
                    "properties": {
                        "repository": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "placementPolicy": {
                    "$ref": "#/$defs/placementPolicy"
                },
                "replicas": {
                    "type": "integer"
                },
                "resourceRatio": {
                    "minimum": 2,
                    "type": "integer"
                },
                "sizingPolicy": {
                    "$ref": "#/$defs/sizingPolicy"
                },
                "storageProfile": {
                    "$ref": "#/$defs/storageProfile"
                },
                "template": {
                    "$ref": "#/$defs/template"
                }
            },
            "required": [
                "catalog",
                "template",
                "replicas",
                "dns",
                "etcd",
                "resourceRatio"
            ],
            "type": "object"
        },
        "controllerManager": {
            "properties": {
                "featureGates": {
                    "type": "string"
                }
            },
            "required": [
                "featureGates"
            ],
            "type": "object"
        },
        "includeClusterResourceSet": {
            "type": "string"
        },
        "kubectlImage": {
            "description": "Used by cluster-shared library chart to configure coredns in-cluster.",
            "properties": {
                "name": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            },
            "title": "Kubectl image",
            "type": "object"
        },
        "kubernetesVersion": {
            "type": "string"
        },
        "network": {
            "properties": {
                "controlPlaneEndpoint": {
                    "properties": {
                        "host": {
                            "type": "string"
                        },
                        "port": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "extraOvdcNetworks": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "loadBalancer": {
                    "properties": {
                        "vipSubnet": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                },
                "ntp": {
                    "properties": {
                        "pools": {
                            "items": {
                                "type": "string"
                            },
                            "type": "array"
                        },
                        "servers": {
                            "items": {
                                "type": "string"
                            },
                            "type": "array"
                        }
                    },
                    "type": "object"
                },
                "podsCidrBlocks": {
                    "minItems": 1,
                    "maxItems": 1,
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "servicesCidrBlocks": {
                    "minItems": 1,
                    "maxItems": 1,
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "staticRoutes": {
                    "items": {
                        "properties": {
                            "destination": {
                                "examples": [
                                    "10.128.0.0/16"
                                ],
                                "type": "string"
                            },
                            "via": {
                                "format": "ipv4",
                                "type": "string"
                            }
                        },
                        "required": [
                            "destination",
                            "via"
                        ],
                        "type": "object"
                    },
                    "type": "array"
                }
            },
            "required": [
                "loadBalancer",
                "podsCidrBlocks",
                "servicesCidrBlocks"
            ],
            "type": "object"
        },
        "nodeClasses": {
            "additionalProperties": {
                "properties": {
                    "catalog": {
                        "$ref": "#/$defs/catalog"
                    },
                    "customNodeLabels": {
                        "$ref": "#/$defs/nodeLabels"
                    },
                    "customNodeTaints": {
                        "$ref": "#/$defs/nodeTaints"
                    },
                    "diskSizeGB": {
                        "$ref": "#/$defs/diskSizeGB"
                    },
                    "placementPolicy": {
                        "$ref": "#/$defs/placementPolicy"
                    },
                    "sizingPolicy": {
                        "$ref": "#/$defs/sizingPolicy"
                    },
                    "storageProfile": {
                        "$ref": "#/$defs/storageProfile"
                    },
                    "template": {
                        "$ref": "#/$defs/template"
                    }
                },
                "type": "object"
            },
            "description": "Re-usable node configuration.",
            "title": "Node classes",
            "type": "object"
        },
        "nodePools": {
            "additionalProperties": {
                "properties": {
                    "class": {
                        "title": "Node class",
                        "type": "string"
                    },
                    "replicas": {
                        "minimum": 1,
                        "type": "integer"
                    }
                },
                "type": "object"
            },
            "description": "Groups of worker nodes with identical configuration.",
            "title": "Node pools",
            "type": "object"
        },
        "oidc": {
            "properties": {
                "caFile": {
                    "type": "string"
                },
                "clientId": {
                    "type": "string"
                },
                "groupsClaim": {
                    "type": "string"
                },
                "issuerUrl": {
                    "type": "string"
                },
                "usernameClaim": {
                    "type": "string"
                },
                "usernamePrefix": {
                    "type": "string"
                }
            },
            "required": [
                "clientId",
                "groupsClaim",
                "issuerUrl",
                "usernameClaim"
            ],
            "type": "object"
        },
        "organization": {
            "type": "string"
        },
        "osUsers": {
            "description": "Configuration for OS users in cluster nodes.",
            "items": {
                "properties": {
                    "name": {
                        "description": "Username of the user.",
                        "title": "Name",
                        "type": "string"
                    }
                },
                "required": [
                    "name"
                ],
                "title": "User",
                "type": "object"
            },
            "title": "OS Users",
            "type": "array"
        },
        "proxy": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "secretName": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "servicePriority": {
            "enum": [
                "lowest",
                "medium",
                "highest"
            ],
            "type": "string"
        },
        "sshTrustedUserCAKeys": {
            "description": "Public keys of certificate authorities that are trusted to sign user certificates for authentication.",
            "items": {
                "type": "string"
            },
            "title": "Ssh trusted user CA keys",
            "type": "array"
        },
        "userContext": {
            "properties": {
                "secretRef": {
                    "properties": {
                        "secretName": {
                            "type": "string"
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        },
        "vmNamingTemplate": {
            "description": "Go template to generate VM names based on machine and vcdMachine CRs.",
            "examples": [
                "mytenant-{{.machine.Name |sha256sum | trunc 7}}"
            ],
            "title": "VM naming template",
            "type": "string"
        }
    },
    "required": [
        "apiServer",
        "baseDomain",
        "controllerManager",
        "cloudDirector",
        "controlPlane",
        "network",
        "nodeClasses",
        "nodePools",
        "organization",
        "userContext"
    ],
    "type": "object"
}
